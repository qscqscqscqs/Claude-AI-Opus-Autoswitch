{
  "manifest_version": 2,
  "name": "Claude AI Opus Autoswitch",
  "version": "1.6",
  "description": "Schaltet Claude AI automatisch auf das Opus-Modell um - mit optimierter Ladeerkennung.",
  "permissions": [
    "activeTab",
    "storage",
    "webNavigation",
    "tabs",
    "*://*.claude.ai/*",
    "https://claude.ai/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.claude.ai/*",
        "https://claude.ai/*"
      ],
      "js": [
        "switch_to_opus.js"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "claude-opus-autoswitch@addon",
      "strict_min_version": "89.0"
    }
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "icons/*"
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    },
    "default_title": "Claude AI Opus Autoswitch",
    "default_popup": "popup.html"
  }
}